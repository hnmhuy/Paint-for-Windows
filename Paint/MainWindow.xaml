<Window
    x:Class="Paint.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Paint"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainWindow"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ActionGroup" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu
            Name="TopBar"
            Grid.Row="0"
            Background="#2000">
            <ui:MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="Open..." />
                <MenuItem Header="Save" />
                <Separator />
                <MenuItem Header="Exit" />
            </ui:MenuItem>
            <Separator />
            <ui:MenuItem Icon="{ui:SymbolIcon ArrowUndo24}" />
            <ui:MenuItem Icon="{ui:SymbolIcon ArrowRedo24}" />
        </Menu>

        <StackPanel
            Name="ActionMenu"
            Grid.Row="1"
            Style="{StaticResource ActionGroup}">
            <StackPanel Orientation="Vertical">
                <ui:Button
                    Margin="8"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    Icon="{ui:SymbolIcon SelectObject24}" />
                <ui:TextBlock Text="Selection" TextAlignment="Center" />
            </StackPanel>

            <Separator Margin="8,0,8,0" />

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <ui:Button
                        Margin="8"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        Icon="{ui:SymbolIcon Copy24}" />
                    <ui:Button
                        Margin="8"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        Icon="{ui:SymbolIcon Cut24}" />
                    <ui:Button
                        Margin="8"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        Icon="{ui:SymbolIcon ClipBoardPaste24}" />
                </StackPanel>
                <ui:TextBlock Text="Tools" TextAlignment="Center" />
            </StackPanel>

            <Separator Margin="8,0,8,0" />
            <StackPanel Name="ShapeActions" Orientation="Vertical">
                <StackPanel x:Name="ShapeList" Orientation="Horizontal" />
                <ui:TextBlock
                    VerticalAlignment="Bottom"
                    Text="Shapes"
                    TextAlignment="Center" />
            </StackPanel>
            <Separator Margin="8,0,8,0" />
            <StackPanel Orientation="Vertical">
                <ui:DropDownButton Width="150" Content="Stroke type" />
                <StackPanel Orientation="Horizontal">
                    <Slider
                        x:Name="thicknessSlider"
                        Width="80"
                        Margin="8,0,8,0"
                        Maximum="30"
                        Minimum="1"
                        ValueChanged="thicknessSlider_ValueChanged" />
                    <ui:TextBlock VerticalAlignment="Center" Text="{Binding Thickness, Mode=OneWay}" />
                    <ui:TextBlock VerticalAlignment="Center" Text=" px" />
                </StackPanel>
                <ui:TextBlock
                    VerticalAlignment="Bottom"
                    Text="Brush"
                    TextAlignment="Center" />
            </StackPanel>
            <Separator Margin="8,0,8,0" />
            <StackPanel Orientation="Vertical">
                <ui:Button
                    Margin="8"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    Icon="{ui:SymbolIcon Layer24}" />
                <ui:TextBlock Text="Layer" TextAlignment="Center" />
            </StackPanel>
        </StackPanel>
        <Separator />
        <Grid
            x:Name="DrawSpace"
            Grid.Row="2"
            Margin="8"
            Background="White"
            MouseDown="DrawSpace_MouseDown"
            MouseMove="DrawSpace_MouseMove"
            MouseUp="DrawSpace_MouseUp" />
    </Grid>
</Window>